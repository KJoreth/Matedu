@model TypeDetailedDTO

@{
    ViewData["Title"] = "Type Details";
}
<link rel="stylesheet" href="~/css/type/details.css" asp-append-version="true" />

<div class="container type-section">
    <div class="type-name bg-purple ms-auto me-auto text-center py-4 px-4">
        <h2>@Model.Name</h2>
    </div>
    <div class="row mt-5">
        <div class="col-12 col-md-6 col-lg-5">
            <div class="bg-purple type-info">
                <div class="d-flex flex-column justify-content-between align-items-center px-5 pt-3 mb-4 w-100">
                    <div class="mb-2 d-flex w-100 justify-content-between align-items-center">
                        <i class="icon-quote-right icon-2x me-3"></i>
                        <p class="m-0 w-75 detail">Definition: @Model.Definition</p>
                    </div>
                    <div class="mb-2 d-flex w-100 justify-content-between align-items-center">
                        <i class="icon-trophy icon-2x me-3"></i>
                        <p class="m-0 w-75 detail">Number of Materials: @Model.MaterialCounter</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-7">
            <div class="bg-blue py-3 px-3 d-flex flex-column align-items-center">
                <h3>Educational Materials:</h3>
                @foreach (var material in Model.Materials)
                {
                    <div class="material-box py-2 mb-4 w-100">
                        <div class="row">
                            <div class="col d-flex justify-content-center align-items-center color-yellow">
                                <a class="color-yellow" asp-controller="material" asp-action="details" asp-route-id="@material.Id"><b>@material.Title</b></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
         </div>
    </div>    
</div>