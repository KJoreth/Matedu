@model TypeCreateDTO

@if(ViewBag.Msg != null)
{
    <script>
        alert('@ViewBag.Msg');
    </script>
}

@{
    ViewData["Title"] = "Type Create";
}

<link rel="stylesheet" href="~/css/type/editAndCreate.css" asp-append-version="true" />

<div class="container form-section bg-purple px-4 py-4 w-75">
    <h2 class="color-yellow ps-5 mb-4">Create author</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="d-flex row justify-content-around">
                <div class="form-group col-12 col-md-5">
                    <label asp-for="@Model.Name"></label>
                    <div>
                        <input asp-for="@Model.Name" class="form-control">
                        <span asp-validation-for="@Model.Name"></span>
                    </div>
                </div>
                <div class="form-group col-12 col-md-5">
                    <label asp-for="@Model.Definition"></label>
                    <div>
                        <input asp-for="@Model.Definition" class="form-control">
                        <span asp-validation-for="@Model.Definition"></span>
                    </div>
                </div>
            </div>                     
            <div class="form-group mt-5 d-flex justify-content-md-center">
                <input type="submit" value="Save" class="btn btn-yellow">
                <a asp-action="index"  
                    class="btn btn-green ms-4">
                    Go Back
                </a>
            </div>
        </div>
    }
</div>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}