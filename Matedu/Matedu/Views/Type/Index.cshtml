@model IEnumerable<TypeSimpleDTO>

<table>
    <tr>
        <th>Name</th>
    </tr>
    @foreach(TypeSimpleDTO type in Model)
    {
        <tr>
            <td>@type.Name</td>
            <td>
                <a asp-action="details" asp-route-id="@type.Id" 
                    class="btn btn-success m-1">
                    Details
                </a>
            </td>
            <td>
                <a asp-action="edit" asp-route-id="@type.Id" 
                    class="btn btn-warning m-1">
                    Edit
                </a>
            </td>
            <td>
                <a asp-action="delete" asp-route-id="@type.Id" 
                    class="btn btn-danger m-1"
                    onclick="return confirm('Are you sure you want to delete this Type?')">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>

<a asp-action="create" class="btn btn-primary">Create new</a>