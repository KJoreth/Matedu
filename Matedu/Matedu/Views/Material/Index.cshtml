@model IEnumerable<MaterialSearchDTO>
@{
    ViewData["Title"] = "Materials";
}
<link rel="stylesheet" href="~/css/material/Index.css" asp-append-version="true" />


<div class="container material-section">
    <form asp-action="Index" method="get" class="search-field w-50 text-dark d-flex align-items-center justify-content-between py-4 px-4 mb-5 flex-column flex-md-row ms-auto me-auto">
        <div class="form-group d-flex align-items-center w-100 mb-2 mb-md-0">
            <label for="searchTitle"><i class="icon-search icon-2x me-3 d-none d-lg-block"></i></label>
            <input id="searchTitle" type="text" name="SearchString" value="@ViewData["SearchParm"]" class="w-100" placeholder="Enter Title"/>
        </div>
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-center justify-content-md-end ms-md-5 w-100">
            <input type="submit" value="Search" class="btn btn-yellow btn-md-lg mb-3 mb-md-0 me-md-4 w-100" />
            <a asp-action="Index" class="btn btn-yellow btn-md-lg w-100">Reset</a>
        </div>       
    </form>
    <div class="row">
        <div class="col-4">
            <div class="bg-blue">
                <div class="d-flex justify-content-between align-items-center px-5 pt-3 mb-4 w-100">
                    <div class="d-flex">
                        <i class="icon-sort-by-attributes-alt icon-2x me-3"></i>
                        <h4 class="p-0 m-0">Filters</h4>
                    </div>
                        <a asp-action="Index" class="btn btn-yellow btn-md-lg">Reset</a>
                </div>
                <div class="d-flex filters flex-column ps-5 pe-4 py-4 mt-2">
                    <div class="mb-2">
                        <i class="icon-font icon-2x me-3"></i>
                        <a class="filter" asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">@Html.DisplayNameFor(model => model.Title)</a>
                    </div>
                    <div class="mb-2">
                        <i class="icon-user icon-2x me-3"></i>
                        <a class="filter" asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSortParm"]">@Html.DisplayNameFor(model => model.Author)</a>
                    </div>
                    <div>
                        <i class="icon-file icon-2x me-3"></i>
                        <a class="filter" asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParm"]">@Html.DisplayNameFor(model => model.Type)</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-8">
            <div class="bg-blue py-3 px-3">
                @foreach (var material in Model)
                if (User.IsInRole("Admin"))
                {
                    <div class="material-box py-2 mb-4">
                        <div class="row">
                            <div class="col d-flex justify-content-center align-items-center color-yellow">
                                <b>@material.Title</b>
                            </div>
                            <div class="col d-none d-md-flex flex-column justify-content-center align-items-start">
                                Author: @material.Author.Name<br />
                                Category: @material.Type.Name<br />
                                Score: @material.AverageScore / 10<br/>
                            </div>
                            <div class="col d-flex justify-content-around align-items-center">
                                <a asp-action="details" asp-route-id="@material.Id" class="btn btn-primary">Details</a>
                                <a asp-action="edit" asp-route-id="@material.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@material.Id" 
                                 onclick="return confirm('Are you sure you want to delete this Material?')" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="material-box py-2 mb-4">
                        <div class="row">
                            <div class="col d-flex justify-content-center align-items-center color-yellow">
                                <b>@material.Title</b>
                            </div>
                            <div class="col d-none d-md-flex flex-column justify-content-center align-items-start">
                                Author: @material.Author.Name<br />
                                Category: @material.Type.Name<br />
                                Score: @material.AverageScore / 10<br/>
                            </div>
                            <div class="col d-flex justify-content-center align-items-center">
                                <a asp-action="details" asp-route-id="@material.Id" class="btn btn-yellow w-75">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
         </div>
    </div>
    
    
</div>








