@model IEnumerable<MaterialSearchDTO>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by title: <input type="text" name="SearchString" value="@ViewData["SearchParm"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TitleSortParm"]">@Html.DisplayNameFor(model => model.Title)</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSortParm"]">@Html.DisplayNameFor(model => model.Author)</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParm"]">@Html.DisplayNameFor(model => model.Type)</a></th>
        </tr>
        @foreach(MaterialSearchDTO material in Model)
        {
            <tr>
                <td>@material.Title</td>
                <td>@material.Author.Name</td>
                <td>@material.Type.Name</td>
                <td>
                    <a asp-action="details" asp-route-id="@material.Id" 
                        class="btn btn-success m-1">
                        Details
                    </a>
                </td>
                <td>
                    <a asp-action="edit" asp-route-id="@material.Id" 
                        class="btn btn-warning m-1">
                        Edit
                    </a>
                </td>
                <td>
                    <a asp-action="delete" asp-route-id="@material.Id" 
                        class="btn btn-danger m-1"
                        onclick="return confirm('Are you sure you want to delete this Material?')">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>