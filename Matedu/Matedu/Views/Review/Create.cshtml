@model ReviewCreateViewModel

@using(Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Review</h4>
        <hr/>
        @Html.HiddenFor(model => model.MaterialId)
        <div class="form-group">
            <label asp-for="@Model.Points"></label>
            <div>
                <input asp-for="@Model.Points" class="form-control">
                <span asp-validation-for="@Model.Points"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Text"></label>
            <div>
                <input asp-for="@Model.Text" class="form-control">
                <span asp-validation-for="@Model.Text"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary">
            <a asp-controller="material" asp-action="details" asp-route-id="@Model.MaterialId" 
                class="btn btn-danger m-1">
                Go Back
            </a>
        </div>
    </div>
}

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
