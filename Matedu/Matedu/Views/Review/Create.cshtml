@model ReviewCreateViewModel

@{
    ViewData["Title"] = "Review Create";
}

<link rel="stylesheet" href="~/css/author/editAndCreate.css" asp-append-version="true" />

<div class="container form-section bg-purple px-4 py-4 w-75">
    <h2 class="color-yellow ps-5 mb-4">Create author</h2>
    @using (Html.BeginForm())
    {
        <div class="form-horizontal">
            <div class="d-flex row justify-content-around">
                <div class="form-group col-12 col-md-5">
                    <label asp-for="@Model.Points"></label>
                    <div>
                        <input asp-for="@Model.Points" class="form-control">
                        <span asp-validation-for="@Model.Points"></span>
                    </div>
                </div>
                <div class="form-group col-12 col-md-5">
                    <label asp-for="@Model.Text"></label>
                    <div>
                        <input asp-for="@Model.Text" class="form-control">
                        <span asp-validation-for="@Model.Text"></span>
                    </div>
                </div>
            </div>                     
            <div class="form-group mt-5 d-flex justify-content-md-center">
                <input type="submit" value="Save" class="btn btn-yellow">
                <a asp-action="index"  
                    class="btn btn-green ms-4">
                    Go Back
                </a>
            </div>
        </div>
    }
</div>




